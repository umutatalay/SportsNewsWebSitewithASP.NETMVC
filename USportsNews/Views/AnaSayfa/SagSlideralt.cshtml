@using USportsNews.Models.Entity
@model List<Tbl_Haber>

@foreach (var item in Model)
{
    <div id="img-hover-zoom img-hover-zoom--basic" class="photo">
        <img class="mt-3" src="@item.HaberGorsel"  style="width:100%;">
        <div class="ssu">
            <a href="~/@item.Tbl_Kategori.KategoriAdi/Haber/@item.HaberID"><h4 style="color:white"> @item.HaberBaslik </h4></a>
        </div>
    </div>
}

