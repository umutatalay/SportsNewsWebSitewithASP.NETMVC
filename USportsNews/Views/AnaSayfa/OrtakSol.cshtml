@using USportsNews.Models.Entity
@model List<Tbl_Haber>


@foreach (var item in Model)
{
   
    <div class="card mt-3">
        <span class="photo"><img src="@item.HaberGorsel" class="card-img-top img-fluid photo" alt="..."></span>
        <div class="card-body">
            <h5 class="card-title">
                <a style="color:black" href="~/@item.Tbl_Kategori.KategoriAdi/Haber/@item.HaberID">@item.HaberBaslik</a>
            </h5>
            <p class="card-text"><small class="text-muted">@item.Tbl_Kategori.KategoriAdi</small></p>
            <p class="card-text"><small class="text-muted">@item.HaberTarih</small></p>
        </div>
    </div>
   
   
}
