@using USportsNews.Models.Entity
@model List<Tbl_Haber>

@foreach (var item in Model)
{

    <div class="col-md-4">
        <div id="img-hover-zoom img-hover-zoom--basic" class="photo">
            <img class="mt-3" src="@item.HaberGorsel" alt="Resim" style="width:100%;">
        </div>
    </div>
    <div class="col-md-8 mt-3">
        <strong>
            <a style="color:black;opacity:0.8" href="/Basketbol/Haber/@item.HaberID">@item.HaberBaslik</a>
        </strong>
    </div>
}
